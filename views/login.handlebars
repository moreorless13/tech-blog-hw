<div class="card border-dark position-absolute top-50 start-50 translate-middle col-2 mt-2">
    <div class="card-header bg-primary text-white text-center">
        <h2>Login</h2>
    </div>
    <form id="login-form" class="card-body">
        <div class="mb-3">
            <label for="username-input-login" class="form-label">Username: </label>
            <input type="text" id="username-input-login" class="bg-info" />
        </div>
        <div class="mb-3">
            <label for="password-input-login" class="form-label">Password: </label>
            <input type="password" id="password-input-login" class="bg-info" />
        </div>
        <button type="submit" id="login-btn" class="mt-3 btn-primary position-relative bottom-0 start-50 translate-middle">Login</button>
        <br />
        <a type="button" href="/signup" class="mt-2 ms-">Sign Up Here!</a>
    </form>
</div>
